{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Compile",
			"command": "python",
			"args": [
				"../../../../tools/mod-builder/main.py",
				"1",
				"1"
			],
			"group": {
				"kind": "build"
			},
            "problemMatcher": {
                "owner": "cpp",
				"fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^.*Compilation failed.*$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
		},
		{
			"type": "shell",
			"label": "Clean",
			"command": "python",
			"args": [
				"../../../../tools/mod-builder/main.py",
				"2"
			],
			"group": {
				"kind": "build"
			},
            "problemMatcher": {
                "owner": "cpp",
				"fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^.*error.*$",
                    "severity": 1,
                    "message": 1
                }
            }
		},
		{
			"type": "shell",
			"label": "Build Disc",
			"command": "python",
			"args": [
				"../../../../tools/mod-builder/main.py",
				"4",
				"1"
			],
			"group": {
				"kind": "build"
			},
            "problemMatcher": {
                "owner": "cpp",
				"fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^.*error.*$",
                    "severity": 1,
                    "message": 1
                }
            }
		},
		{
			"type": "shell",
			"label": "Reload",
			"command": "python",
			"args": [
				"../../../../tools/mod-builder/main.py",
				"7",
				"2"
			],
			"group": {
				"kind": "build"
			},
            "problemMatcher": {
                "owner": "cpp",
				"fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^.*error.*$",
                    "severity": 1,
                    "message": 1
                }
            }
		}
	]
}